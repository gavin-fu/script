{
  "manifest_version": 3,
  "name": "牙科预约助手",
  "version": "1.0.0",
  "description": "牙科诊所预约管理系统浏览器插件",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs",
    "webRequest"
  ],
  "host_permissions": [
    "https://www.uenjoydental.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "牙科预约助手"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.uenjoydental.com/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  }
}
