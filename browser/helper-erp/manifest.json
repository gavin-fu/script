{
  "manifest_version": 3,
  "name": "Weekly Report",
  "version": "1.0",
  "description": "自动生成ERP周报的浏览器插件",
  "permissions": [
    "cookies",
    "activeTab",
    "storage",
    "contextMenus",
    "clipboardWrite",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>",
    "http://tjerp.superboss.cc/*",
    "https://tb.raycloud.com/*"
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content_script.js"]
    }
  ],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  }
}